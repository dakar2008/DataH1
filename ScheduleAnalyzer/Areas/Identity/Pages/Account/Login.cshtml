@page
@model LoginModel
@{
    ViewData["Title"] = "Schedule Analyzer";
    Layout = "_Layout_Login";
}
<div id="loginframe">
    <h1 class="text-center mb-3 mt-3 noselect">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col">
            <section>
                <form id="account" method="post">
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" autofocus />
                        <label asp-for="Input.Email" class="form-label textboxlabel noselect"></label>
                        <span asp-validation-for="Input.Email" class="text-warning noselect"></span>
                    </div>
                    <div class="form-floating mb-1">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label textboxlabel noselect"></label>
                        <span asp-validation-for="Input.Password" class="text-warning noselect"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label noselect" id="RememberMeLabel">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Log Ind</button>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-warning noselect"></div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}